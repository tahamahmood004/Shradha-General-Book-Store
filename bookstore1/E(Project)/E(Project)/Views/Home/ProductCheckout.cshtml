@model ProductCheckout
@if (TempData.ContainsKey("success"))
{
    <p class="text-success">
        @TempData["Success alert"]
    </p>
}


<!doctype html>
<html lang="zxx">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>aranaz</title>

</head>

<body>
    <!--::header part start::-->
   @Html.Partial("Navbar")
    <!-- Header part end-->
    <!--================Home Banner Area =================-->
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Product Checkout</h2>
                            <p>Home <span>-</span> Shop Single</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!--================Checkout Area =================-->
    <section class="checkout_area padding_top">
        <div class="container">
           
          
            <div class="billing_details">
                <div class="row">
                    <div class="col-lg-8">
                        <center>
                        <h3 class="mx-auto">Billing Details</h3>
                       
                        <form class="col-lg-8" method="post">
                            <div class="col-md-12 form-group ">
                                <input type="text" placeholder="First name" class="form-control" asp-for="First_name" />
                                <span class="placeholder" ></span>
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" placeholder="Last name" class="form-control" asp-for="Last_name" />
                                <span class="placeholder"></span>
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" placeholder="Phone number" class="form-control" asp-for=" Phone" />
                                <span class="placeholder"></span> 
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" placeholder="Email " class="form-control" asp-for="Email" />
                                <span class="placeholder"></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <input type="text" placeholder="Address " class="form-control" asp-for="Address" />
                                <span class="placeholder" ></span>
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" placeholder="Town/City" class="form-control" asp-for="City" />
                                <span class="placeholder" ></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" placeholder="Postcode/ZIP" asp-for="Postal_code" />
                            </div>
                            <div class="col-md-12 form-group">
                                <textarea class="form-control" asp-for="Order_notee" rows="1"
                                          placeholder="Order Notes"></textarea>
                            </div>


                            <div class="form-group mt-3">
                                <a asp-controller="Home" asp-action="Payment_method" class="btn btn-danger">Online Payment</a>
                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                        
                    </div>
                    </center>
                </div>
            </div>
        </div>
    </section>
    <!--================End Checkout Area =================-->
    <!--::footer_part start::-->
    <footer class="footer_part" style="background-color:#229799">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-sm-6 col-lg-2">
                    <div class="single_footer_part">
                        <h3 style="color:burlywood;">Contents</h3>
                        <ul class="list-unstyled" style="color:azure;">
                            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li><a asp-action="About" asp-controller="Home">About</a></li>
                            <li><a asp-action="Contact" asp-controller="Home">Contact</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-2">
                    <div class="single_footer_part">
                        <h3 style="color:burlywood;">Categories</h3>
                        <ul class="list-unstyled" style="color:azure;">
                            <li><a asp-action="Novel" asp-controller="Home">Novels</a></li>
                            <li><a asp-action="Books" asp-controller="Home">Books</a></li>
                            <li><a asp-action="Stationary" asp-controller="Home">Stationary</a></li>
                            <li><a asp-action="Magzines" asp-controller="Home">Magzines</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-2">
                    <div class="single_footer_part">
                        <h3 style="color:burlywood;">Support</h3>
                        <ul class="list-unstyled">
                            <li><a asp-action="Faq" asp-controller="Home">FAQ's</a></li>
                            <li><a asp-action="Index" asp-controller="Home">Track Order</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-2">
                    <div class="single_footer_part">
                        <h3 style="color:burlywood;">Sort By</h3>
                        <ul class="list-unstyled">
                            <li><a asp-action="Index" asp-controller="Home">New Arrivals</a></li>
                            <li><a asp-action="Index" asp-controller="Home">Best Sellers</a></li>
                            <li><a asp-action="Index" asp-controller="Home">sale</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="single_footer_part">
                        <h3 style="color:burlywood;">Newsletter</h3>
                        <p style="color:azure;">
                            Heaven fruitful doesn't over lesser in days. Appear creeping
                        </p>
                        <div id="mc_embed_signup">
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="copyright_part">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="copyright_text">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="footer_icon social_icon">
                            <ul class="list-unstyled">
                                <li><a href="https://www.facebook.com/login/" class="single_social_icon"><i class="bi bi-facebook"></i></a></li>
                                <li><a href="https://www.instagram.com/" class="single_social_icon"><i class="bi bi-instagram"></i></a></li>
                                <li><a href="https://www.youtube.com/" class="single_social_icon"><i class="bi bi-youtube"></i></a></li>
                                <li><a href="https://www.whatsapp.com/" class="single_social_icon"><i class="bi bi-whatsapp"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!--::footer_part end::-->
        
    <!-- jquery plugins here-->
    <!-- jquery -->

</body>

</html>