<style>
.about-us {

    margin-top:5%;
    padding: 40px 20px;
    background-color: #f8f9fa;
    margin-bottom: 20px;
}

.about {
    display: flex;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Added box-shadow transition */
}

.pic {
    width: 50%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease; /* Added transform transition */
}

.text {
    padding: 20px;
    background-color: #ffffff;
    width: 50%;
    transition: background-color 0.3s ease; /* Smooth background transition */
}

h2 {
    font-family: 'Georgia', serif;
    font-size: 2rem;
    color: #333;
    margin-bottom: 15px;
}

p {
    font-family: 'Arial', sans-serif;
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
}

/* Hover effects */
.about:hover {
    transform: scale(1.03); /* Slight zoom on hover */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Enhanced shadow effect */
}

.about:hover .pic {
    transform: scale(1.05); /* Slight zoom for image on hover */
}

.about:hover .text {
    background-color: #f1f1f1; /* Change background color on hover */
}

